.search
{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: auto;
	height: auto;
	padding: 80px 40px;
}
.search h1{
    font-size: 55px;
    margin: 0;
	padding: 0;
	font-weight: bold;
	color: #fff;

}
.search input[type="text"]
{
	border: none;
	border-bottom: 1px solid #fff;
	background: transparent;
	outline: none;
	height: 40px;
	color: black;
	font-size: 40px;
    text-align:center;
}