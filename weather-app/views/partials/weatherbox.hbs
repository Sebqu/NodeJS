.box
{
	position: absolute;
	top: 40%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: 350px;
	height: 500px;
	box-sizing: border-box;
	background: rgba(0,0,0,.5);
}
.box h1 
{
    padding: 5px 40px;
    font-size: 30px;
    color: black;
}
.box h2 
{
    font-size: 23px;
    color: black;  
}
.box p
{
    font-size: 17px;
	margin: 0;
	padding: 0;
	font-weight: bold;
	color: #fff;
}

